doctype
html(lang=config.language)
    head
        include head.pug
    body
        div.loading-bar
            div.progress
        //.wrap#barba-wrapper
        div(data-barba="wrapper")
            header
                h1.branding
                    a(href=url_for(), title=config.title)
                        if theme.logo
                            img.logo-image(src=url_for(theme.logo), alt='logo', style="vertical-align:middle")
                    a(href=url_for(), title=config.title) #{config.title + ' â€¢ ' + config.subtitle}
                include nav.pug
            //.barba-container
            main-barba(data-barba="container" data-barba-namespace="page")
                main.container
                    block container
                footer
                    block pagination
                    block copyright
        include scripts.pug
